{
  "name": "@vuepic/vue-datepicker",
  "version": "12.0.3",
  "description": "Datepicker component for Vue 3",
  "author": "Vuepic",
  "private": false,
  "license": "MIT",
  "homepage": "https://vue3datepicker.com",
  "types": "dist/index.d.ts",
  "type": "module",
  "module": "dist/vue-datepicker.js",
  "style": "dist/main.css",
  "sass": "src/VueDatePicker/style/main.scss",
  "files": [
    "dist/*",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-datepicker.js",
      "default": "./dist/vue-datepicker.js"
    },
    "./dist/main.css": {
      "import": "./dist/main.css",
      "require": "./dist/main.css",
      "default": "./dist/main.css"
    }
  },
  "scripts": {
    "dev": "vite",
    "clean": "rimraf ./dist",
    "build": "run-s clean type-check build:es build:css",
    "type-check": "vue-tsc --build",
    "build:es": "cross-env NODE_ENV=production vite build --mode production",
    "build:css": "cross-env NODE_ENV=production node_modules/.bin/sass src/VueDatePicker/style/main.scss dist/main.css --style compressed",
    "build:for-docs": "run-s build docs:copy-build",
    "test": "cross-env NODE_ENV=test vitest",
    "test:coverage": "cross-env NODE_ENV=test vitest --environment jsdom run --coverage",
    "lint": "run-s lint:style lint:lib",
    "lint:style": "stylelint --fix \"src/**/*.scss\"",
    "lint:lib": "eslint --fix \"src/**\"",
    "format": "prettier --write src/",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:copy-build": "node scripts/update-docs-build.mjs"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^27.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.18.13",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/eslint-plugin": "^1.4.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "c8": "^10.1.3",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.1",
    "eslint-plugin-vue": "^10.5.1",
    "jiti": "^2.6.1",
    "jsdom": "^27.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.1.0",
    "sass": "^1.93.3",
    "sass-loader": "^16.0.6",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vitepress": "^2.0.0-alpha.12",
    "vitest": "^4.0.8",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.3"
  },
  "dependencies": {
    "@date-fns/tz": "^1.4.1",
    "@floating-ui/vue": "^1.1.9",
    "@vueuse/core": "^14.0.0",
    "date-fns": "^4.1.0"
  },
  "peerDependencies": {
    "vue": ">=3.5.0"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vuepic/vue-datepicker.git"
  },
  "bugs": {
    "url": "https://github.com/Vuepic/vue-datepicker/issues"
  },
  "keywords": [
    "vue-datepicker",
    "vue",
    "datepicker",
    "date",
    "vue3-datepicker",
    "datetimepicker",
    "daterangepicker"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
